{{#partial "content"}}
    <h2>Iniciar Sesion</h2>
    <form action="/signin" method="POST" id="login">
        <div>
            <label for="primer-input">Usuario</label>
            <input id="primer-input" type="text" name="user">
        </div>
        <div>
            <label for="segundo-input">Contraseña</label>
            <input id="segundo-input" type="password" name="password">
        </div>
        <button type="submit" form="login">Iniciar sesión</button>
        {{#if usuarioInexistente}}
            Error: usuario inexistente
        {{/if}}

    </form>
{{/partial}}

